  <div class="bottom">
    <div class="bottom__title">代表挨拶</div>
    <div class="bottom__title__cover"></div>
    <div class="bottom__body">
      <div class="bottom__img">
        <%= image_tag "material/sagyoin.png", alt: "代表", class: "image__daihyo" %>
        <p class="bottom__name"> 代表 名波 大知</p>
